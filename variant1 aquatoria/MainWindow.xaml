<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Авторизация" Height="450" Width="800">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                <GradientStop Color="#4B0082" Offset="0"/>
                <GradientStop Color="#101551" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Border BorderBrush="Black" BorderThickness="2" Margin="50" Padding="20" CornerRadius="10">
            <StackPanel>
                <TextBlock Text="Выберите профиль" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center" />
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
                <Button Content="Client" Width="100" Height="30" Margin="60 100 60 60" FontSize="16" Click="Button_Click" HorizontalAlignment="Center" />
                    <Button Content="Administrator" Width="100" Height="30" Margin="60 100 60 60"  FontSize="16" Click="Button_Click" HorizontalAlignment="Center"/>
                    <Button Content="Еmployee" Width="100" Height="30" Margin="60 100 60 60" FontSize="16" Click="Button_Click" HorizontalAlignment="Center"/>
            </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Window>